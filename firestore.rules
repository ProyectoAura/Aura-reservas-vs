rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ¡¡REGLA TEMPORAL INSEGURA PARA EMERGENCIA!!
    // Permite a cualquier usuario autenticado leer y escribir TODO.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
